<%- include('partials/header')%>


<h1>Home</h1>


<p> <%=HomeContent%></p>
<%post.forEach((item) => {%>
  <h1><%=item.title%></h1>


  <%  if (item.content.length > 100) { %>
      <p>  <%=item.content.slice(0,100) +'...' %>
      <a href="/posts/<%=item._id%>">Read more</a>
      </p>


    <%}else{%>
      <p><%= item.content%></p>
    <%}%>


<%});%>





